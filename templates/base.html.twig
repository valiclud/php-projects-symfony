<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link
		rel="stylesheet" href="/oldlanguages.css">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{#{ ux_controller_link_tags() }#}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
    {% block header %}
		<header id="header">
			<nav id="menu-header">
                <li>
					<a href="{{ path('originaltext_index') }}">
						<div>Original Texts</div>
					</a>
				</li>
                <li>
					<a href="{{ path('app_translated_text_index') }}">
						<div>Translated Texts</div>
					</a>
				</li>
                {% if is_granted('ROLE_ADMIN') %}
				<li>
					<a href="{{ path('app_pagination_index') }}">
						<div>Pagination</div>
					</a>
				</li>
                {% endif %}
				<li>
					<a href="{{ path('app_login') }}">
						<div>Login</div>
					</a>
				</li>
                <li>
					<a href="{{ path('app_logout') }}">
						<div>Logout</div>
					</a>
				</li>
			</nav>
		</header>
        {% endblock %}
		{% block body %}{% endblock %}
	</body>
</html>

