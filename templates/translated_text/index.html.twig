{% extends 'base.html.twig' %}

{% block title %}TranslatedText index{% endblock %}

{% block body %}
    <h1>TranslatedText index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Author</th>
                <th>Title</th>
                <th>Translated Text</th>
                <th>Language</th>
                <th>Original Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for text in translated_texts %}
            <tr>
                <td>{{ text.author }}</td>
                <td>{{ text.title }}</td>
                <td>{{ text.text }}</td>
                <td>{{ text.language }}</td>
                <td>{{ text.originalText.text }}</td>
                <td>
                    <a href="{{ path('app_translated_text_show', {'id': text.id}) }}">Show Details</a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_translated_text_edit', {'id': text.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_translated_text_new') }}">Create new</a>
    <a href="{{ path('app_login') }}">Login</a>
{% endblock %}
